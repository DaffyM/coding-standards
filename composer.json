{
    "name": "shopsys/coding-standards",
    "description": "Coding standards definition compatible with PSR-2",
    "keywords": ["code style","coding standards","PSR-2","code quality"],
    "license": "MIT",
    "authors": [
        {
            "name": "ShopSys",
            "homepage": "https://www.shopsys.com/"
        }
    ],
    "require": {
        "php": "^7.1",
        "friendsofphp/php-cs-fixer": "^2.9",
        "jakub-onderka/php-parallel-lint": "^0.9",
        "phpmd/phpmd": "^2.6",
        "squizlabs/php_codesniffer": "^3.2",
        "object-calisthenics/phpcs-calisthenics-rules": "^3.1",
        "slevomat/coding-standard": "^4.0",
        "symplify/easy-coding-standard": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "ShopSys\\CodingStandards\\": "src"
        }
    },
    "scripts": {
        "run-all-checks": [
            "vendor/bin/parallel-lint ./src ./tests",
            "vendor/bin/ecs check ./src ./tests",
            "vendor/bin/php-cs-fixer fix --config=build/phpcs-fixer.php_cs --dry-run --verbose --diff ./src ./tests",
            "vendor/bin/phpcs --standard=rulesetCS.xml --extensions=php --encoding=utf-8 -sp ./src ./tests --colors",
            "vendor/bin/phpmd ./src,./tests text rulesetMD.xml --extensions=php"
        ]
    }
}
