{
    "name": "shopsys/coding-standards",
    "description": "Coding standards definition compatible with PSR-2",
    "keywords": ["code style","coding standards","PSR-2","code quality"],
    "license": "MIT",
    "authors": [
        {
            "name": "ShopSys",
            "homepage": "https://www.shopsys.com/"
        }
    ],
    "require": {
        "php": "^5.6|^7.0",
        "friendsofphp/php-cs-fixer": "^2.9",
        "jakub-onderka/php-parallel-lint": "^0.9",
        "phpmd/phpmd": "^2.6",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7|^6.5"
    },
    "autoload": {
        "psr-4": {
            "ShopSys\\CodingStandards\\": "src"
        }
    },
    "scripts": {
        "run-all-checks": [
            "vendor/bin/parallel-lint ./src",
            "vendor/bin/php-cs-fixer fix --config=build/phpcs-fixer.php_cs --dry-run --verbose --diff ./src",
            "vendor/bin/phpcs --standard=rulesetCS.xml --extensions=php --encoding=utf-8 -sp ./src",
            "vendor/bin/phpmd ./src text rulesetMD.xml --extensions=php"
        ]
    }
}
